---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Stack" description="Tools and software I use">
  <div class="space-y-8">
    <h1 class="text-2xl font-medium">Stack</h1>

    <p class="text-gray-700">
      Tools and software I use daily.
    </p>

    <div class="space-y-8">
      <section>
        <h2 class="font-medium mb-3">Design</h2>
        <ul class="space-y-2 text-gray-700">
          <li>Figma — UI design, prototyping</li>
          <li>Whimsical — Wireframes, flows</li>
        </ul>
      </section>

      <section>
        <h2 class="font-medium mb-3">Writing</h2>
        <ul class="space-y-2 text-gray-700">
          <li>Ulysses — Long-form writing</li>
          <li>Notion — Notes, docs</li>
        </ul>
      </section>

      <section>
        <h2 class="font-medium mb-3">Development</h2>
        <ul class="space-y-2 text-gray-700">
          <li>VS Code — Editor</li>
          <li>GitHub — Version control</li>
        </ul>
      </section>

      <section>
        <h2 class="font-medium mb-3">Productivity</h2>
        <ul class="space-y-2 text-gray-700">
          <li>Things — Task management</li>
          <li>Raycast — Launcher</li>
        </ul>
      </section>
    </div>
  </div>
</BaseLayout>
